---
import CardServico from "../components/card-servico.astro";
---

<section
  class="section-with-red-line relative w-full flex justify-center items-center"
>
  <CardServico
    cardTitle="Serviço 1"
    cardIcon="/icons/wrench.and.screwdriver.svg"
  />

  <CardServico
    cardTitle="Serviço 2"
    cardIcon="/icons/wrench.and.screwdriver.svg"
    whatRow="row-2"
  />

  <CardServico
    cardTitle="Serviço 3"
    cardIcon="/icons/wrench.and.screwdriver.svg"
  />

  <CardServico
    cardTitle="Serviço 4"
    cardIcon="/icons/wrench.and.screwdriver.svg"
    whatRow="row-2"
  />

  <div class="red-line"></div>
</section>

<style>
  .section-with-red-line {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: fit-content;
    padding: 80px 25px;
  }

  .red-line {
    height: 100%;
    content: "";
    position: absolute;
    top: 0;
    bottom: 0;
    left: 50%;
    width: 6px;
    background-color: red;
    transform: translateX(-50%);
  }
</style>
